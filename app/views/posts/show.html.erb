<h1><%= @post.title %></h1>
<small><%= @post.created_at.strftime("%d %B, %Y") %></small>
<p><%= @post.body %></p>
<% if @post.category %>
	<p>Category: <%= link_to @post.category.name, category_path(:id => @post.category.id) %></p>
<% else %>
	<p>No Category</p>
<% end %>
<p><%= link_to "Back to Blog Posts", posts_path %></p>