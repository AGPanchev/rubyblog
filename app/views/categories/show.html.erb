<h1><%=@category.name %></h1>
<% if @posts.each do |post| %>
	<div class="post">
		<h2><%= link_to post.title,post %></h2>
		<div class="entry"><%= post.body %></div>
		<div class="byline">
			<p class="meta"><%= post.created_at.strftime("%d %B %Y") %> Posted by <%= post.admin_user.name %></p>
			<p class="links"><%= link_to "Read More",post %></p>
		</div>
	</div>
<% end.empty? %>
	<div class="post">
		<p>Sorry, there are no posts in this category</p>
	</div>
<% end %>
<p><%= link_to "Back to Categories", categories_path %></p>
